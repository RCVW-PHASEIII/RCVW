<Window x:Class="V2IHubSimulator.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:V2IHubSimulator"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        Title="Input" Height="146" Width="300">
    <StackPanel Margin="0,0,0,-5">
        <Label Name="lblMessage" Margin="5" Height="30"/>
        <TextBox x:Name="txtResponse" Margin="5"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="Ok" IsDefault="True" Margin="5" Name="btnOk" Click="btnOk_Click" Width="50" />
            <Button Content="Cancel" IsCancel="True" Margin="5" Name="btnCancel" Click="btnCancel_Click" Width="50" />
        </StackPanel>
    </StackPanel>
</Window>
