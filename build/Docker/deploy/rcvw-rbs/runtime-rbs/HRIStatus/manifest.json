{
	"name":"RCVW-${RCVW_COMPONENT}-HRI",
	"description":"Sends HRI Status as SPAT Message",
	"version":"${RCVW_VERSION}",
	"exe": "bin/${HRISTATUS_PLUGIN}",
	"channels":[
		{
			"comment": "TMX RBS core connection. Must use unique IDs for Kafka.",
			"context": "kafka://localhost:${KAFKA_PORT}",
			"config": {
				"auto-subscribe": true,
				"write-only": true,
				"topics": "^(J2735|tmx)/",
				"thread-count": 2,
				"thread-assignment": "ShortestQueue"
			}
		},
		{
			"comment": "TMX CBS cloud connection.",
			"id": "tmx-cbs",
			"context": "${RCVW_CBS}",
			"config": {
				"auto-subscribe": false,
				"write-only": true,
				"topics": "^(J2735|tmx)/",
				"thread-count": 2,
				"thread-assignment": "ShortestQueue"
			}
		}
	],
	"Frequency": 100,
	"RailPinNumber": "${RCVW_VOLTAGE_INPUT}",
	"LaneMap": [
		{ "tracked": true, "signalGroup": 1 },
		{ "vehicle": true, "signalGroup": 2 }
	],
	"IntersectionID": "${RCVW_HRI_ID}",
	"IntersectionName": "${RCVW_HRI_DESCRIPTION}",
	"AlwaysSend": true,
	"PortName": "${RCVW_IEEE_INPUT}",
	"SerialDataTimeout": 1500,
	"loglevel": "DEBUG"
}
